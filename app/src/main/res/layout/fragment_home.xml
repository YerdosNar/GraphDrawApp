<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:text="Graphing Calculator" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:text="Welcome to the Graphing Calculator app! This application helps you visualize mathematical functions easily." />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:text="Features:" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp"
            android:text="• Plot up to 3 different functions simultaneously\n\n• Support for basic and advanced mathematical functions including trigonometric and logarithmic functions\n\n• Interactive graph viewing with zoom functionality\n\n• Save your graphs to the Examples section\n\n• View predefined example functions" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:text="How to Use:" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            android:text="1. Go to the Graphdraw section to plot functions\n\n2. Enter your function in the format y = f(x)\n\n3. Use the Examples section to view saved graphs and predefined examples" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="Follow me on:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/instagramButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_insta_logo"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_margin="8dp"
                android:contentDescription="Instagram"/>

            <ImageButton
                android:id="@+id/githubButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_github_logo"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_margin="8dp"
                android:contentDescription="GitHub"/>

            <ImageButton
                android:id="@+id/tiktokButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_tiktok_logo"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_margin="8dp"
                android:contentDescription="TikTok"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>